{% extends "admin/layout.html.j2" %}

{% block title %}Blogs - Myonic Admin{% endblock %}

{% block head %}
{% endblock %}

{% block body %}

<form action = "blogs" method="post">
    <label for = "name">New Blog</label>
    <input type = "text" name ="name" placeholder = "Blog Name"/>
    <input type = "submit" value = "Create"/>
</form>

<hr />

{%- for blog in blogs %}

  <p><a href="{{ url_for('blog', blog=blog.name) }}">{{ blog.name }}</a> | <a href="{{ url_for('deleteaBlog', blog=blog.name) }}"> Delete </a> </p>

{% endfor %}

{% endblock %}
